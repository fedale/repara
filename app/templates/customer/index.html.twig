{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>UnconfirmedEmail</th>
                <th>RegistrationIp</th>
                <th>Active</th>
                <th>ConfirmedAt</th>
                <th>LastLoginAt</th>
                <th>BlockedAt</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.code }}</td>
                <td>{{ customer.username }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.password }}</td>
                <td>{{ customer.unconfirmedEmail }}</td>
                <td>{{ customer.registrationIp }}</td>
                <td>{{ customer.active ? 'Yes' : 'No' }}</td>
                <td>{{ customer.confirmedAt ? customer.confirmedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.lastLoginAt ? customer.lastLoginAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.blockedAt ? customer.blockedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.updatedAt ? customer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_customer_customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('app_customer_customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_customer_new') }}">Create new</a>
{% endblock %}
