<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% if title %}{{ title }} - {% endif %}API Platform</title>

    <!--<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">-->
    {% block stylesheet %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Source+Code+Pro:300,600|Titillium+Web:400,600,700,900">
        <link rel="stylesheet" href="{{ asset('bundles/apiplatform/swagger-ui/swagger-ui.css', assetPackage) }}">
        <link rel="stylesheet" href="{{ asset('bundles/apiplatform/style.css', assetPackage) }}">
        <style>
            /** Custom CSS by Danilo Di Moia **/
            body {
                margin: 100px 0 0;
            }

            header:before {
                background-color: #333;
                height: 100px;
            }

            header #logo {
                top: 50px;
            }

            header #logo img {
                height: 50px;
                background-color: transparent;
            }

            header #title {
                position: fixed;
                top: 50px;
                left: 40px;
                z-index: 102;
                transform: translateY(-50%);
                color: #f6b147;
            }

            header #title h2.title,
            header #title h2.title a {
                font-family: 'Titillium Web', sans-serif;
                font-weight: 900;
                font-size: 40px;
                margin: 0;
                color: #f6b147;
                text-decoration: none;
            }

            header #title .description p {
                font-family: 'Titillium Web', sans-serif;
                font-weight: 600;
                font-style: italic;
                margin: 0;
            }

            div.information-container.wrapper {
                display:none;
            }
        </style>
    {% endblock %}

    {% block swagger_data %}
    {% endblock %}
</head>

<body>
<header>
    <div id="title">
    <h2 class="title"><a href="/api/docs">Timekeeper API<small></small></a></h2>
    
    <div class="description">
        <p>Timekeepr API backend</p>
        </div>
    </div>
     <a id="logo" href="https://waltertosto.it/"><img src="{{ asset('wt-logowhite.svg', assetPackage) }}" alt="Walter Tosto website"></a> 
</header>

{% block swagger_ui %}
{% endblock %}

<div class="swagger-ui" id="formats">
    <div class="information-container wrapper">
        <div class="info">
            Available formats:
            {% for format in formats|keys %}
                <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': format})) }}">{{ format }}</a>
            {% endfor %}
            <br>
            Other API docs:
            {% set active_ui = app.request.get('ui', 'swagger_ui') %}
            {% if swaggerUiEnabled and active_ui != 'swagger_ui' %}<a href="{{ path('api_doc') }}">Swagger UI</a>{% endif %}
            {% if reDocEnabled and active_ui != 're_doc' %}<a href="{{ path('api_doc', {'ui': 're_doc'}) }}">ReDoc</a>{% endif %}
            {# FIXME: Typo in graphql => graphQl in SwaggerUiAction #}
            {% if not graphqlEnabled %}<a href="javascript:alert('GraphQL support is not enabled, see https://api-platform.com/docs/core/graphql/')">GraphiQL</a>{% endif %}
            {% if graphiQlEnabled %}<a href="{{ path('api_graphql_graphiql') }}">GraphiQL</a>{% endif %}
            {% if graphQlPlaygroundEnabled %}<a href="{{ path('api_graphql_graphql_playground') }}">GraphQL Playground</a>{% endif %}
        </div>
    </div>
</div>

{% block javascript %}
{% endblock %}

</body>
</html>