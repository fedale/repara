<tbody>
{% for row in rows %}
    <tr>
        {% for column in columns %}
            <td>
                {% if not column.content|default(false) %}
                    {{ attribute(row, column.content) }}
                {% else %}
                    {{ column.content|default(null) }}
                {% endif %}
            </td>
        {% endfor %}
    </tr>
{% else %}
    <tr>
        <td colspan="14">no records found</td>
    </tr>
{% endfor %}
</tbody>