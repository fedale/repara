{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>ConfirmedAt</th>
                <th>UnconfirmedEmail</th>
                <th>BlockedAt</th>
                <th>RegistrationIp</th>
                <th>Active</th>
                <th>LastLoginAt</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.code }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.confirmedAt }}</td>
                <td>{{ user.unconfirmedEmail }}</td>
                <td>{{ user.blockedAt }}</td>
                <td>{{ user.registrationIp }}</td>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
                <td>{{ user.lastLoginAt }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_user_new') }}">Create new</a>
{% endblock %}
