{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ user.code }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>ConfirmedAt</th>
                <td>{{ user.confirmedAt }}</td>
            </tr>
            <tr>
                <th>UnconfirmedEmail</th>
                <td>{{ user.unconfirmedEmail }}</td>
            </tr>
            <tr>
                <th>BlockedAt</th>
                <td>{{ user.blockedAt }}</td>
            </tr>
            <tr>
                <th>RegistrationIp</th>
                <td>{{ user.registrationIp }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ user.deletedAt ? user.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastLoginAt</th>
                <td>{{ user.lastLoginAt }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_user_crud_index') }}">back to list</a>

    <a href="{{ path('app_user_user_crud_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/user_crud/_delete_form.html.twig') }}
{% endblock %}
